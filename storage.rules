rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
 allow read, write: if false;
    }

    // Allow authenticated users to upload to their specific sessions path
 match /sessions/{therapistId}/{anyFileName=**}.webm {
 allow write: if request.auth != null && request.auth.uid == therapistId && request.resource.contentType == 'audio/webm';
      // IMPORTANT: Deny client-side read access to these files
 allow read: if false;
    }
  }
}
