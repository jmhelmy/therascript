{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "main": "lib/index.js",
  "type": "commonjs",
  "engines": {
    "node": "20"
  },
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc --project tsconfig.json",
    "serve": "npm run build && firebase emulators:start --only functions",
    "deploy": "npm run build && firebase deploy --only functions:nextServer",
    "deploy:all": "npm run build && firebase deploy --only functions,hosting",
    "logs": "firebase functions:log"
  },
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.9.0",
    "cors": "^2.8.5",
    "next": "^14.2.29",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.0",
    "@types/node-fetch": "^2.6.12",
    "@types/cors": "^2.8.19",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "typescript": "^5.8.3"
  },
  "private": true,
  "files": [
    "lib",
    "standalone",
    "package.json",
    "package-lock.json"
  ]
}
